<div class="flex flex-col mx-auto">
    <h1 class="mb-4">User details</h1>

    <ul class="bg-white rounded-lg border border-gray-200 w-96 text-gray-900 mb-4">
        <li class="px-6 py-2 border-b border-gray-200 w-full rounded-t-lg">
            <p>First name: <%= @user.first_name %></p>
        </li>
        <li class="px-6 py-2 border-b border-gray-200 w-full">
            <p>Last name: <%= @user.last_name %></p>
        </li>
        <li class="px-6 py-2 border-b border-gray-200 w-full">
            <p>Birth date: <%= @user.birth_date %></p>
        </li>
        <li class="px-6 py-2 border-b border-gray-200 w-full">
            <p>Role: <%= @user.role %></p>
        </li>
        <li class="px-6 py-2 border-b border-gray-200 w-full">
            <p>Active: <%= @user.is_active ? 'Active' : 'Inactive' %></p>
        </li>
        <li class="px-6 py-2 border-b border-gray-200 w-full">
            <p>Created date: <%= @user.created_at %></p>
        </li>
        <li class="px-6 py-2 w-full rounded-b-lg">
            <p>Updated date: <%= @user.updated_at %></p>
        </li>
    </ul>

    <div class="buttons-wrapper">
        <%= link_to "Back to users" , users_path , class: "button-primary %>
    </div>
</div>